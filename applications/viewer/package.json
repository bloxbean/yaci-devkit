{
  "name": "@bloxbean/yaci-viewer",
  "version": "0.1.0",
  "description": "A Cardano blockchain data viewer for developers. It works with the Yaci-Store backend, supporting both a local devnet and public networks.",
  "keywords": [
    "yaci-devkit",
    "cardano",
    "devnet"
  ],
  "license": "MIT",
  "homepage": "https://devkit.yaci.xyz/",
  "repository": "github:bloxbean/yaci-devkit",
  "scripts": {
    "dev": "vite dev --host 0.0.0.0",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0",
    "test": "playwright test",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "bin": {
    "yaci-viewer": "./cli.js"
  },
  "files": [
    "build",
    "cli.js"
  ],
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@popperjs/core": "^2.11.8",
    "@sveltejs/adapter-node": "^5.2.11",
    "@sveltejs/kit": "^2.15.1",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "autoprefixer": "^10.4.20",
    "classnames": "^2.5.1",
    "daisyui": "^4.12.10",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.41",
    "postcss-load-config": "^6.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.6",
    "svelte": "^5.16.0",
    "svelte-check": "^4.1.1",
    "svelte-preprocess": "^6.0.3",
    "tailwindcss": "^3.4.8",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4",
    "vite": "^6.0.6",
    "vitest": "^2.1.8"
  },
  "type": "module",
  "dependencies": {
    "dotenv": "^16.4.7",
    "moment": "^2.30.1",
    "svelte-feather-icons": "^4.1.0",
    "yargs": "^17.7.2"
  }
}
